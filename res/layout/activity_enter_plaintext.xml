<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_plaintext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/bytesRemainingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bytes_remaining" />

        <TextView
            android:id="@+id/bytesRemainingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;bytes>" />

    </LinearLayout>

    <EditText
        android:id="@+id/plaintextEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/chooseKeyForEncryptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/choose_a_key_button" />

</LinearLayout>
